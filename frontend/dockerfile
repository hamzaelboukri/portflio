FROM node:18

WORKDIR /usr/src/app

# Copy package files first
COPY package*.json ./

# Install dependencies (Linux binaries)
RUN npm install

# Copy app code (but NOT node_modules thanks to .dockerignore)
COPY . .

EXPOSE 5173

# Run with --host to allow external connections
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]